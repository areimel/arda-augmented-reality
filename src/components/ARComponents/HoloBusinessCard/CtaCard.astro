const { 
	icon = "#icon-web", 
	headline = "Visit Our Website", 
	text = "Tap to visit our website", 
	link = "https://www.alecreimel.com", 
	position = "0 -0.5 0.01", 
	rotation = "0 0 0" 
} = Astro.props;
---

<a-plane 
	position={position}
	rotation={rotation}
	width="0.85"
	height="1"
	color="#FFFFFF"
	side="double"
>

	<a-circle 
		color="#999" 
		radius="0.15" 
		position="0 0.3 0.01"
		side="double"
	>
		<a-image 
			src={icon} 
			position="0 0 0.01"
			height="0.2" 
			width="0.2"			
		></a-image>
	</a-circle>

	<a-text 
		value={headline} 
		color="#000"
		position="0 0.05 0.01"
		baseline="center"
		align="center"
		width="1.5"
	></a-text>

	<a-plane 
		position="0 -0.3 0.01"
		width="0.75"
		height="0.2"
		color="#000"
		side="double"
		class="clickable"
		data-link={link}
	>
		<a-text 
			value="TAP HERE" 
			color="#FFFFFF"
			position="0 0.005 0.01"
			baseline="center"
			align="center"
			width="1.5"
		></a-text>
	</a-plane>
</a-plane>
