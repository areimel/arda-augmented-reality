---
// Components
import CautionStripe from './CautionStripe.astro';

// Props
const { marker } = Astro.props;

// Default marker image
const defaultMarker = "/markers/complex-marker-v1.jpg";
---

<section class="flex-1 flex flex-col justify-center items-center p-8 bg-custom-white">
	<div class="w-full h-full flex flex-col justify-center items-center">
		<CautionStripe text="Marker Image - Point your camera at this image to view the asset." icon="" />

		<img src={marker ? marker : defaultMarker} class="w-4/5 h-auto my-4 mx-auto"/>

		<CautionStripe text="This image acts as a real-world anchor point for the virtual hologram." icon="" />
	</div>
</section>